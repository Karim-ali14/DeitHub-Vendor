<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/style_sheet_bottom"
    android:id="@+id/Container">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LayoutTitle"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="خيارات الطلب"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:id="@+id/chose"
            android:fontFamily="@font/helveticaneuelt_arabic"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/cancel"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/close"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:id="@+id/Line"
        android:layout_below="@id/LayoutTitle"
        android:background="@color/colorLine"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Line"
        android:paddingTop="5dp"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:id="@+id/CallLayout"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call_active"
            android:layout_alignParentRight="true"
            android:id="@+id/contacted"
            android:layout_marginTop="18dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="الاتصال بالعميل"
            android:layout_toLeftOf="@id/contacted"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:id="@+id/Text"
            android:fontFamily="@font/helveticaneuelt_arabic"
            />


    </LinearLayout>
</RelativeLayout>